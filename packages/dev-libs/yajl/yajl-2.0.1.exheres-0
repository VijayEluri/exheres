require cmake [ cmake_minimum_version="2.6" ]

SUMMARY="Small event-driven (SAX-style) JSON parser"
HOMEPAGE="http://lloyd.github.com/yajl"
DESCRIPTION="
    Yet Another JSON Library. YAJL is a small event-driven (SAX-style)
    JSON parser written in ANSI C, and a small validating JSON generator.
"

DOWNLOADS="http://download.github.com/lloyd-yajl-2.0.1-0-gf4b2b1a.tar.gz"
WORK="${WORKBASE}/lloyd-yajl-f4b2b1a"

LICENCES="BSD"
SLOT="2"
PLATFORMS="~amd64"
MYOPTIONS="doc"

DEPENDENCIES="
    build:
        doc? ( app-doc/doxygen )
"
